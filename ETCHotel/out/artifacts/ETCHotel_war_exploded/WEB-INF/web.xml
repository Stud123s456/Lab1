<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>InsuranceApp</display-name>
    <welcome-file-list>
        <welcome-file>main</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <res-ref-name>jdbc/ETCHotel</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <filter>
        <filter-name>setCharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>setCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>by.bsuir.insurance.filter.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <!-- menu -->
    <servlet>
        <servlet-name>DeclarationServlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.DeclarationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeclarationServlet</servlet-name>
        <url-pattern>/declaration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Page2Servlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.Page2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Page2Servlet</servlet-name>
        <url-pattern>/page2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Menu1Servlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.Menu1Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Menu1Servlet</servlet-name>
        <url-pattern>/menu1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Page3Servlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.Page3Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Page3Servlet</servlet-name>
        <url-pattern>/page3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Page4Servlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.Page4Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Page4Servlet</servlet-name>
        <url-pattern>/page4</url-pattern>
    </servlet-mapping>

    <!-- menu-info -->
    <servlet>
        <servlet-name>InfoServlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.InfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InfoServlet</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArchiveServlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.ArchiveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArchiveServlet</servlet-name>
        <url-pattern>/archive</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CalcServlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.CalcServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalcServlet</servlet-name>
        <url-pattern>/calc</url-pattern>
    </servlet-mapping>

    <!-- log-in -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>by.bsuir.insurance.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>